            </div>
        </div>

    </fieldset>
    <fieldset>
        <legend>Dirección del Cliente</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.ClienteVM.Direccion.Provincia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ClienteVM.Direccion.Provincia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ClienteVM.Direccion.Provincia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClienteVM.Direccion.Sector, htmlAttributes: new { @class = "control-label col-md-2" })
