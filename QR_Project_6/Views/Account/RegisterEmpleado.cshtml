            @Html.DropDownListFor(m => m.EmpleadoVM.Empleado.Tipo_Identificacion_Tipo_IdentificacionID, (SelectList)ViewBag.Tipo_Identificacion_Tipo_IdentificacionID, null, new { @class = "form-control" })
