@model QR_Project_6.Models.RegisterEmpleadoViewModel
@{
    ViewBag.Title = "Registrarse";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("RegisterEmpleado", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
