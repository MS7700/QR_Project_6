@using Microsoft.AspNet.Identity
@using QR_Project_6.Extensions;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hola, " + ModelHelpers.getNombreCompletoUsuario(User.Identity), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
        </ul>
    }
}
else
{
    
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrar cliente","RegisterCliente","Account", routeValues: null, htmlAttributes: new { className = "registerLink" })</li>
        <li>@Html.ActionLink("Registrar empleado","RegisterEmpleado", "Account", routeValues: null, htmlAttributes: new { className = "registerLink" })</li>
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
