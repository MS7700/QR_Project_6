@model IEnumerable<QR_Project_6.Models.Pais>

@{
    ViewBag.Title = "Index";
}

<h2>@ModelMetadataProviders.Current.GetMetadataForType(null, typeof(QR_Project_6.Models.Pais)).GetDisplayName()</h2>

<p>
    @Html.ActionLink("Agregar Nuevo", "Create", new { }, new { @class = "btn btn-success btn-xs" })
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Pais)
            <input class="form-control search-input input-sm" onkeyup="myFilter(this)" type="text" placeholder="Filter">
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Pais)
        </td>
        <td>
            <div class="btn-group-vertical">
                @Html.ActionLink("Editar", "Edit", new { id = item.PaisID }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Detalles", "Details", new { id = item.PaisID }, new { @class = "btn btn-default btn-xs" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.PaisID }, new { @class = "btn btn-danger btn-xs" })
            </div>
        </td>
    </tr>
}
</tbody>
</table>
